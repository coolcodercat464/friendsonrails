  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :bio, style: "display: block" %>
    <%= form.text_field :bio %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone %>
  </div>

  <div>
    <%= form.label :user_id, style: "display: none" %>
    <%= form.text_field :user_id, id: :friend_user_id, value: current_user.id, style: "display:none" %>
    <%= current_user.id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
